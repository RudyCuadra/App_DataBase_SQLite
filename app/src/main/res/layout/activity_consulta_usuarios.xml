<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConsultaUsuariosActivity"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    >

    <EditText
        android:id="@+id/etNDocumento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NÂ° Documento"
        android:layout_toLeftOf="@+id/btnBucarU"/>

    <Button
        android:id="@+id/btnBucarU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Buscar"
        android:onClick="onClick"/>

    <EditText
        android:id="@+id/etNombreU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:layout_below="@+id/btnBucarU"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/etTelefonoU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Telefono"
        android:layout_below="@+id/etNombreU"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/etTelefonoU"
        android:gravity="center"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btnActualizarU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actualizar"
            android:layout_weight="1"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/btnEliminarUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:layout_weight="1"
            android:onClick="onClick"/>

    </LinearLayout>



</RelativeLayout>